# Configuration for <%= @title %> (from the generic template)
<%-
require 'pathname'
plugincmd = Pathname.new(@plugin).absolute? ? @plugin : "#{scope.lookupvar('nagios::client::plugin_dir')}/#{@plugin}"
sudooption = @sudo ? ('sudo ' + (@sudo_user ? "-u #{@sudo_user} " : '')) : ''
-%>
command[<%= @command %>]=<%= sudooption %><%= plugincmd %><% if @args %> <%= @args %><% end %>
